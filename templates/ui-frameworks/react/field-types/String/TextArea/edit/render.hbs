<label htmlFor="{{label}}">{{label}}</label>
{{#if (eq cardinality "vector")}}
<textarea
  name="{{label}}"
{{#if variable_to_read}}
  value={ {{variable_to_read}} }
{{/if}}
  onChange={(e) => {
    set{{pascal_case variable_to_change}}(prevValues => prevValues?.map((v, idx) => {
      if ({{key}} === idx) {
        v = e.target.value;
      }
      return v;
    }))
  }}
{{#if required}}
  required
{{/if}}
>
</textarea>
{{else}}
<textarea name="{{label}}" {{#if variable_to_read}}value={ {{variable_to_read}} }{{/if}} onChange={(e) => set{{pascal_case variable_to_change}}(e.target.value)} {{#if required}}required{{/if}}></textarea>
{{/if}}